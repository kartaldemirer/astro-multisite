---
const { title, description, ctaText, ctaLink } = Astro.props;
---

<section class="py-16 px-6 text-center bg-blue-50 text-black rounded-3xl shadow-2xl fade-in-up">
  <h1 class="text-4xl sm:text-5xl font-extrabold mb-4 text-blue-900">{title}</h1>
  <p class="text-lg sm:text-xl mb-6 max-w-2xl mx-auto text-gray-700">{description}</p>
  <a
    href={ctaLink}
    class="inline-block bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-800 transition"
    title="{ctaText}"
  >
    {ctaText}
  </a>
</section>

