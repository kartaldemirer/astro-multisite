---
import { siteConfig } from "../config/siteConfig";
---

<section class={siteConfig.hero.sectionClass}>
  <h1 class={siteConfig.hero.titleClass}>{siteConfig.hero.title}</h1>
  <p class={siteConfig.hero.descClass}>{siteConfig.hero.description}</p>
  <a
    href={siteConfig.hero.ctaLink}
    class={siteConfig.hero.ctaClass}
    title={siteConfig.hero.title}
  >
    {siteConfig.hero.ctaText}
  </a>
</section>
