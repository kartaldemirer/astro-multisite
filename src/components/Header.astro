---
import { siteConfig } from "../config/siteConfig"
---

<header class="w-full px-6 py-4 border-b border-gray-800">
  <div class="max-w-6xl mx-auto flex justify-between items-center">
    <!-- Logo -->
    <a href="/" class={`text-2xl font-bold ${siteConfig.theme.highlight}`}>
      {siteConfig.siteMeta.name}
    </a>

    <!-- Hamburger Menu (Mobile) -->
    <button id="menu-toggle" class="sm:hidden text-white focus:outline-none text-2xl">
      â˜°
    </button>

    <!-- Menu Items -->
    <nav id="menu" class="hidden sm:flex space-x-6 text-sm text-white font-medium">
      {siteConfig.nav.map((item) => (
        <a href={item.href} class={`transition hover:${siteConfig.theme.text.highlight}`}>{item.text}</a>
      ))}
    </nav>
  </div>

  <!-- Mobile Menu (Dropdown) -->
  <nav id="mobile-menu" class="sm:hidden mt-2 hidden flex-col space-y-2 text-white text-sm font-medium px-1">
    {siteConfig.nav.map((item) => (
      <a href={item.href} class="block px-2 py-1 rounded hover:bg-gray-700 transition">{item.text}</a>
    ))}
  </nav>

  <script type="text/javascript">
    const toggleBtn = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");
    toggleBtn?.addEventListener("click", () => {
      mobileMenu?.classList.toggle("hidden");
    });
  </script>
</header>
