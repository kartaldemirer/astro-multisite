---
import { siteConfig } from "../config/kumaryeri_siteConfig"
---

<header class={`${siteConfig.theme.header}`}>
  <div class="max-w-6xl mx-auto flex justify-between items-center">
    <!-- Logo -->
    <a href="/" class={`text-2xl font-bold ${siteConfig.theme.highlight}`}>
      {siteConfig.siteMeta.name}
    </a>

    <!-- Hamburger Menu (Mobile) -->
    <button id="menu-toggle" class={`sm:hidden ${siteConfig.theme.text.primary} focus:outline-none text-2xl`}>
      â˜°
    </button>

    <!-- Menu Items -->
    <nav id="menu" class={`hidden sm:flex space-x-6 text-sm ${siteConfig.theme.text.primary} font-medium`}>
      {siteConfig.header.nav.map((item) => (
        <a href={item.href} class={`transition hover:${siteConfig.theme.text.highlight}`}>{item.name}</a>
      ))}
    </nav>
  </div>

  <!-- Mobile Menu (Dropdown) -->
  <nav id="mobile-menu" class={`sm:hidden mt-2 hidden flex-col space-y-2 ${siteConfig.theme.text.primary} text-sm font-medium px-1`}>
    {siteConfig.header.nav.map((item) => (
      <a href={item.href} class={`transition hover:${siteConfig.theme.text.highlight}`}>{item.name}</a>
    ))}
  </nav>

  <script type="text/javascript">
    const toggleBtn = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");
    toggleBtn?.addEventListener("click", () => {
      mobileMenu?.classList.toggle("hidden");
    });
  </script>
</header>
