---
interface HighlightItem {
  title: string;
  description: string;
}

export interface Props {
  items: HighlightItem[];
}

const { items } = Astro.props;
---

<section class="mt-12 space-y-8 text-gray-200 text-sm leading-relaxed">
  {items.map((item, index) => (
    <div>
      <h3 class="text-lg font-semibold mb-1 text-yellow-400">{item.title}</h3>
      <p set:html={item.description}></p>
    </div>
  ))}
</section>
