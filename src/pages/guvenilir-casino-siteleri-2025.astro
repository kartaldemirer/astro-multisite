---
import BaseLayout from "../layouts/BaseLayout.astro";
import { siteConfig } from "../config/kumaryeri_siteConfig";
import FAQ from "../components/Faq.astro";
import Highlights from "../components/Highlights.astro";
import { Image } from 'astro:assets';

import enGuvenilirCasinoSiteleri from '../assets/kumaryeri/2025-en-guvenilir-casino-siteleri.jpg';
import bedavaFreespinVerenCasinoSiteleri from '../assets/kumaryeri/en-guvenilir-lisans-turleri.jpg';
import enIyiFreespinFirsatlari from '../assets/kumaryeri/hizli-odeme-sunan-siteler.jpg';
import casinoBonuslariVeFreespinler from '../assets/kumaryeri/mobil-uyum-ve-ssl-sertifikasi.jpg';

const page = siteConfig.pages.guvenilirCasino2025;
---
<BaseLayout title={page.title} keywords={page.keywords} description={page.description} faq={page.extra.faq} canonical={page.canonical} extra={page.extra} pageKey="guvenilirCasino2025">
  <article class="prose prose-invert max-w-4xl mx-auto">
    <Image src={enGuvenilirCasinoSiteleri} alt="2025’in En Güvenilir Casino Siteleri" width={720} height={420} class="mb-10" />
    <h1 class={`text-2xl font-bold ${siteConfig.theme.text.highlight} border-b ${siteConfig.theme.text.borderColor} pb-2`}>
      <a href="/guvenilir-casino-siteleri-2025/" title="freespin veren siteler">{page.heading}</a>
    </h1>
    <p class={`${siteConfig.theme.text.p}`}>
