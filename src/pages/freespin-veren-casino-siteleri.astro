import casinoBonuslariVeFreespinler from '../assets/kumaryeri/2025-casino-bonusları-ve-freespinler.jpg';

const page = siteConfig.pages.freespin;

const { title, description, schemaType, extra, canonical } = Astro.props;

const isFAQ = schemaType === "FAQPage";
const schemaJSON = {
  "@context": "https://schema.org",
  "@type": isFAQ ? "FAQPage" : (schemaType || "Article"),
  ...(isFAQ
    ? {
        "mainEntity": extra?.faq?.map((f: { question: any; answer: any; }) => ({
          "@type": "Question",
          "name": f.question,
          "acceptedAnswer": {
            "@type": "Answer",
            "text": f.answer
          }
        }))
      }
    : {
        "headline": title,
        "description": description,
        "mainEntityOfPage": canonical,
        "author": {
          "@type": "Organization",
          "name": siteConfig.siteMeta.name
        },
        "publisher": {
          "@type": "Organization",
          "name": siteConfig.siteMeta.name,
          "logo": {
            "@type": "ImageObject",
            "url": siteConfig.siteMeta.og.image
          }
        },
        "datePublished": "2025-08-01",
        "dateModified": "2025-08-01",
        "image": siteConfig.siteMeta.og.image
      }
  )
};
---
<script type="application/ld+json" set:html={JSON.stringify(schemaJSON)}></script>
