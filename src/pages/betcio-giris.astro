---
import BaseLayout from "../layouts/BaseLayout.astro";
import { siteConfig } from "../config/kumarpuan_siteConfig";
import FAQ from "../components/Faq.astro";
import Highlights from "../components/Highlights.astro";
import { Image } from 'astro:assets';

import freespinVereSiteler2025 from '../assets/kumarpuan/bedava-freespin.jpg';

const page = siteConfig.pages.betcioGiris;

---
<BaseLayout title={page.title} keywords={page.keywords} description={page.description} faq={page.extra.faq} canonical={page.canonical} extra={page.extra} image={freespinVereSiteler2025} pageKey="betcioGiris">
