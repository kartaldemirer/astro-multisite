---
import BaseLayout from "../layouts/BaseLayout.astro";
import { siteConfig } from "../config/siteConfig";
import FAQ from "../components/Faq.astro";
import Highlights from "../components/Highlights.astro";
import { Image } from 'astro:assets';

import freespinVereSiteler2025 from '../assets/kumarpuan/guvenilir-freespin-siteleri.jpg';

const page = siteConfig.pages.guvenilirFreespinSiteleri;

const { title, description, schemaType, extra, canonical } = Astro.props;

const isFAQ = schemaType === "FAQPage";
const schemaJSON = {
  "@context": "https://schema.org",
  "@type": isFAQ ? "FAQPage" : (schemaType || "Article"),
  ...(isFAQ
    ? {
        "mainEntity": extra?.faq?.map((f: { question: any; answer: any; }) => ({
          "@type": "Question",
          "name": f.question,
          "acceptedAnswer": {
            "@type": "Answer",
            "text": f.answer
          }
        }))
      }
    : {
        "headline": title,
        "description": description,
        "mainEntityOfPage": canonical,
        "author": {
          "@type": "Organization",
          "name": siteConfig.siteMeta.name
        },
        "publisher": {
          "@type": "Organization",
          "name": siteConfig.siteMeta.name,
          "logo": {
            "@type": "ImageObject",
            "url": siteConfig.siteMeta.og.image
          }
        },
        "datePublished": "2025-08-01",
        "dateModified": "2025-08-01",
        "image": siteConfig.siteMeta.og.image
      }
  )
};
---
<script type="application/ld+json" set:html={JSON.stringify(schemaJSON)}></script>
<BaseLayout title={page.title} keywords={page.keywords} description={page.description} faq={page.extra.faq} canonical={page.canonical} extra={page.extra}>
  <article class="prose prose-invert max-w-4xl mx-auto">
    <Image src={freespinVereSiteler2025} alt="Güvenilir Freespin Casino Siteleri" width={720} height={420} class="mb-10" />
    <h1 class={`text-2xl font-bold ${siteConfig.bonusSites.titleColor} border-b ${siteConfig.bonusSites.borderColor} pb-2`}>
      <a href={page.canonical}>{page.heading}</a>
    </h1>
    <p class="text-lg leading-relaxed text-gray-300 mb-10 whitespace-pre-line">
      <strong>Güvenilir freespin siteleri</strong>, lisanslı, SSL korumalı ve kullanıcı dostu platformlardır. 2025 yılında, oyuncuların en çok dikkat ettiği kriterler lisans durumu, ödeme güvenliği ve müşteri desteğidir. Bu rehberde, güvenilir siteleri nasıl ayırt edebileceğinizi öğreneceksiniz.
    </p>

    <h2 class={`text-xl font-bold ${siteConfig.bonusSites.titleColor} border-b ${siteConfig.bonusSites.borderColor} pb-2`}>
        Güvenilirlik Kriterleri
    </h2>

    <ul class="list-disc list-inside mb-6">
      <li><strong>Lisans</strong> – Malta Gaming Authority (MGA), Curacao eGaming veya Gibraltar lisansı</li>
      <li><strong>SSL Sertifikası</strong> – Kullanıcı verilerinin korunması için zorunlu</li>
      <li><strong>Kullanıcı Yorumları</strong> – Gerçek oyuncu deneyimleri</li>
    </ul>

    <p class="text-lg leading-relaxed text-gray-300 mb-10 whitespace-pre-line">
      Daha fazla avantajlı platform için <a href="/freespin-veren-casino-siteleri-2025/" class="text-yellow-400 underline">freespin veren siteler rehberimizi</a> ve <a href="/bedava-freespin-veren-casino-siteleri" class="text-yellow-400 underline"> bedava freespin kampanyalarını</a> inceleyin.
    </p>

    <h2 class={`text-lg font-bold ${siteConfig.bonusSites.titleColor} border-b ${siteConfig.bonusSites.borderColor} pb-2`}>
        Güvenli Ödeme ve Hızlı Para Çekme
    </h2>
    <p class="text-lg leading-relaxed text-gray-300 whitespace-pre-line mb-10">
      Lisanslı siteler, kullanıcılarına hızlı ve güvenli ödeme yöntemleri sunar. E-cüzdanlar (Skrill, Neteller) ve kripto para ile işlemler, en hızlı yöntemler arasındadır.
    </p>
  </article>

  {page.extra?.faq && <FAQ items={page.extra.faq} />}
  {page.extra?.highlights && (
    <Highlights
      items={page.extra.highlights.map((h: string) => ({
        title: h,
        description: h
      }))}
    />
  )}
</BaseLayout>
