const page = siteConfig.pages.freespin2;

const { title, description, schemaType, extra } = Astro.props;

const isFAQ = schemaType === "FAQPage";
const schemaJSON = {
  "@context": "https://schema.org",
  "@type": schemaType || "Article",
  ...(isFAQ
    ? {
        "mainEntity": extra?.faq?.map((f: { question: any; answer: any; }) => ({
          "@type": "Question",
          "name": f.question,
          "acceptedAnswer": {
            "@type": "Answer",
            "text": f.answer
          }
        }))
      }
    : {
        "headline": title,
        "description": description
      }
  )
};
---
<script type="application/ld+json" set:html={JSON.stringify(schemaJSON)}></script>
