---
import BaseLayout from "../layouts/BaseLayout.astro";
import { siteConfig } from "../config/siteConfig";

const meta = {
  title: siteConfig.disclaimer.title + " | KumarYeri.com",
  description: "KumarYeri.com sorumluluk reddi metni. Site kullanım koşulları ve yasal uyarılar hakkında bilgi edinin.",
  canonical: "https://kumaryeri.com/sorumluluk-reddi"
};

const { disclaimer } = siteConfig;
---

<BaseLayout title={meta.title} description={meta.description} canonical={meta.canonical}>
  <section class="max-w-3xl mx-auto px-4 py-20">
    <h1 class="text-4xl font-extrabold mb-6 text-yellow-400">{disclaimer.title}</h1>
    <p class="text-lg leading-relaxed text-gray-300 whitespace-pre-line">{disclaimer.content}</p>
  </section>
</BaseLayout>
