---
import { siteConfig } from "../config/kumarpuan_siteConfig";
import BaseLayout from "../layouts/BaseLayout.astro"
import Hero from "../components/Hero.astro"
import Highlights from "../components/Highlights.astro"
import PromoIntro from "../components/PromoIntro.astro"
import SiteDirectory from "../components/SiteDirectory.astro"
import FAQ from "../components/Faq.astro"
import freespinVereSiteler2025 from '../assets/kumarpuan/freespin-cevirim.jpg';

const page = siteConfig.pages.home;
---

<BaseLayout title={page.title} keywords={page.keywords} description={page.description} canonical={page.canonical} extra={page.extra} image={freespinVereSiteler2025} pageKey="home">
  <Hero />
  <PromoIntro />
  <SiteDirectory />
  <Highlights items={siteConfig.highlights} />
  <FAQ items={siteConfig.faq} />
</BaseLayout>