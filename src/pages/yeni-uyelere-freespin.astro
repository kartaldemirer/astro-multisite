---
import BaseLayout from "../layouts/BaseLayout.astro";
import { siteConfig } from "../config/siteConfig";
import FAQ from "../components/Faq.astro";
import Highlights from "../components/Highlights.astro";
import { Image } from 'astro:assets';

import freespinVereSiteler2025 from '../assets/kumarpuan/yeni-uye-freespin.jpg';

const page = siteConfig.pages.yeniUyeFreespin;

const { title, description, schemaType, extra, canonical } = Astro.props;

const isFAQ = schemaType === "FAQPage";
const schemaJSON = {
  "@context": "https://schema.org",
  "@type": isFAQ ? "FAQPage" : (schemaType || "Article"),
  ...(isFAQ
    ? {
        "mainEntity": extra?.faq?.map((f: { question: any; answer: any; }) => ({
          "@type": "Question",
          "name": f.question,
          "acceptedAnswer": {
            "@type": "Answer",
            "text": f.answer
          }
        }))
      }
    : {
        "headline": title,
        "description": description,
        "mainEntityOfPage": canonical,
        "author": {
          "@type": "Organization",
          "name": siteConfig.siteMeta.name
        },
        "publisher": {
          "@type": "Organization",
          "name": siteConfig.siteMeta.name,
          "logo": {
            "@type": "ImageObject",
            "url": siteConfig.siteMeta.og.image
          }
        },
        "datePublished": "2025-08-01",
        "dateModified": "2025-08-01",
        "image": siteConfig.siteMeta.og.image
      }
  )
};
---
<script type="application/ld+json" set:html={JSON.stringify(schemaJSON)}></script>
<BaseLayout title={page.title} keywords={page.keywords} description={page.description} faq={page.extra.faq} canonical={page.canonical} extra={page.extra}>
  <article class="prose prose-invert max-w-4xl mx-auto">
    <Image src={freespinVereSiteler2025} alt="Yeni Üye Freespin Bonusları" width={720} height={420} class="mb-10" />
    <h1 class={`text-2xl font-bold ${siteConfig.bonusSites.titleColor} border-b ${siteConfig.bonusSites.borderColor} pb-2`}>
      <a href={page.canonical}>{page.heading}</a>
    </h1>
    <p class="text-lg leading-relaxed text-gray-300 mb-10 whitespace-pre-line">
      <strong>Yeni üyelere freespin</strong> fırsatları, casino sitelerine kayıt olan kullanıcılar için en cazip promosyonlardan biridir. Hiç yatırım yapmadan veya düşük yatırım şartıyla bedava dönüş hakkı kazanabilirsiniz. Bu rehberde, 2025 yılında en avantajlı <a href="/freespin-veren-casino-siteleri-2025/" class="text-yellow-400 underline"> freespin veren siteleri</a> inceleyeceğiz.
    </p>

    <h2 class={`text-xl font-bold ${siteConfig.bonusSites.titleColor} border-b ${siteConfig.bonusSites.borderColor} pb-2`}>
        Yeni Üyelere Özel Freespin Nedir?
    </h2>
    <p class="text-lg leading-relaxed text-gray-300 mb-10 whitespace-pre-line">
      Yeni üyelik bonusları, sitelere kayıt olan kullanıcılara verilen özel promosyonlardır. Bu bonuslar genellikle <strong>yatırımsız freespin</strong> veya <strong>ilk yatırım sonrası freespin</strong> olarak sunulur. Çevirim şartlarını öğrenmek için <a href="/freespin-cevirim-sartlari/" class="text-yellow-400 underline">çevirim rehberimizi</a> okuyabilirsiniz.
    </p>

    <h2 class={`text-lg font-bold ${siteConfig.bonusSites.titleColor} border-b ${siteConfig.bonusSites.borderColor} pb-2`}>
        2025’in En Avantajlı Yeni Üye Freespin Kampanyaları
    </h2>
    <ul class="list-disc list-inside my-10">
      <li><strong>MrGamb</strong> – 50 freespin + %100 hoş geldin bonusu</li>
      <li><strong>Stake</strong> – 20 yatırımsız freespin (kayıt sonrası)</li>
      <li><strong>Mostbet</strong> – Çevirimsiz freespin kampanyası</li>
    </ul>

    <p class="text-lg leading-relaxed text-gray-300 mb-10 whitespace-pre-line">
      Mobil cihazlarda bu promosyonları değerlendirmek için <a href="/mobil-freespin-siteleri/" class="text-yellow-400 underline"> mobil freespin sayfamızı</a> ziyaret edebilirsiniz.
    </p>
  </article>

  {page.extra?.faq && <FAQ items={page.extra.faq} />}
  {page.extra?.highlights && (
    <Highlights
      items={page.extra.highlights.map((h: string) => ({
        title: h,
        description: h
      }))}
    />
  )}
</BaseLayout>
